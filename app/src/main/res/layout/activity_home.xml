<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_no_margin"
	android:paddingRight="@dimen/activity_no_margin"
	android:paddingTop="@dimen/activity_no_margin"
	android:paddingBottom="@dimen/activity_no_margin"
	android:orientation="vertical"
	tools:context=".HomeActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/nav_height">

		<LinearLayout
			android:id="@+id/nav_map"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@color/black"
			android:layout_weight="1"
			android:paddingTop="@dimen/tab_padding"
			android:paddingBottom="@dimen/tab_padding"
			android:gravity="center">

			<ImageView
				android:layout_width="@dimen/icon_width"
				android:layout_height="match_parent"
				android:src="@drawable/map"/>

			<RelativeLayout
				android:layout_width="@dimen/selected_width"
				android:layout_height="@dimen/selected_height"
				android:background="@color/grey"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/nav_calendar"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@color/black"
			android:layout_weight="1"
			android:paddingTop="@dimen/tab_padding"
			android:paddingBottom="@dimen/tab_padding"
			android:gravity="center">

			<ImageView
				android:layout_width="@dimen/icon_width"
				android:layout_height="match_parent"
				android:src="@drawable/schedule"/>

			<RelativeLayout
				android:layout_width="@dimen/selected_width"
				android:layout_height="@dimen/selected_height"
				android:background="@color/grey"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/nav_question"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@color/black"
			android:layout_weight="1"
			android:paddingTop="@dimen/tab_padding"
			android:paddingBottom="@dimen/tab_padding"
			android:gravity="center">

			<ImageView
				android:layout_width="@dimen/icon_width"
				android:layout_height="match_parent"
				android:src="@drawable/faq"/>

			<RelativeLayout
				android:layout_width="@dimen/selected_width"
				android:layout_height="@dimen/selected_height"
				android:background="@color/grey"/>

		</LinearLayout>

		<LinearLayout
			android:id="@+id/nav_alert"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:background="@color/black"
			android:layout_weight="1"
			android:paddingTop="@dimen/tab_padding"
			android:paddingBottom="@dimen/tab_padding"
			android:gravity="center">

			<ImageView
				android:layout_width="@dimen/icon_width"
				android:layout_height="match_parent"
				android:src="@drawable/newalert"/>

			<RelativeLayout
				android:layout_width="@dimen/selected_width"
				android:layout_height="@dimen/selected_height"
				android:background="@color/grey"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/content"
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:background="@color/lightGrey"/>

</LinearLayout>
